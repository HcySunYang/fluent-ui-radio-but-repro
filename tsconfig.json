{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true, // For supporting default imports.
    "types": [
      "mocha",
      "node"
    ]
  },
  "exclude": [
    "./node_modules"
  ]
}